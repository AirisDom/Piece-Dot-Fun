# Environment Configuration for Piece Dot Fun

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Solana Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Authentication
NEXT_PUBLIC_AUTH_TOKEN_KEY=auth_token
NEXT_PUBLIC_AUTH_USER_KEY=auth_user

# Features
NEXT_PUBLIC_ENABLE_VOICE_SEARCH=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_LOCATION_SEARCH=true

# Cache and Storage
NEXT_PUBLIC_CACHE_DURATION=300000
NEXT_PUBLIC_LOCAL_STORAGE_PREFIX=piece_dot_fun_

# Payment
NEXT_PUBLIC_DEFAULT_CURRENCY=SOL
NEXT_PUBLIC_PAYMENT_TIMEOUT=30000

# Map and Location (if using maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_DEFAULT_LATITUDE=37.7749
NEXT_PUBLIC_DEFAULT_LONGITUDE=-122.4194

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Error Reporting (optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=info
